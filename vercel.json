{
	"version": 2,
	"builds": [
		{
			"src": "api/package.json",
			"use": "@vercel/static-build",
			"config": {
				"installCommand": "npm install"
			}
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"installCommand": "npm install",
				"buildCommand": "npm run build"
			}
		}
	],
	"routes": [
		{
			"src": "/api/*",
			"dest": "api/index.js"
		},
		{
			"src": "/*",
			"dest": "client/dist/index.html"
		}
	]
}
